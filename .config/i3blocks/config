# i3blocks config

[volume-pulseaudio]
command=~/.config/i3blocks/volume-pulseaudio
interval=persist
markup=pango
AUDIO_HIGH_SYMBOL=VOL 
AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL=VOL 
AUDIO_LOW_THRESH=0
AUDIO_LOW_SYMBOL=VOL 
AUDIO_MUTED_SYMBOL=VOL 
DEFAULT_COLOR=#a0a0a0
MUTED_COLOR=#b58900

[battery]
label=BAT 
command=~/.config/i3blocks/battery
interval=30

[free]
label=MEM 
command=~/.config/i3blocks/memory
interval=1

[cpu]
label=CPU 
command=~/.config/i3blocks/cpu_usage
interval=1

[interface]
label=NET 
command=~/.config/i3blocks/iface
interval=5

[datetime]
command=date +%A\ %F\ %H:%M
interval=10
