# i3blocks config

[volume-pulseaudio]
command=$I3BLOCKS_CONTRIB_REPO/volume-pulseaudio/volume-pulseaudio
interval=persist
markup=pango
AUDIO_HIGH_SYMBOL=VOL 
AUDIO_MED_THRESH=50
AUDIO_MED_SYMBOL=VOL 
AUDIO_LOW_THRESH=0
AUDIO_LOW_SYMBOL=VOL 
AUDIO_MUTED_SYMBOL=VOL 
DEFAULT_COLOR=#a0a0a0
MUTED_COLOR=#b58900

[mediaplayer]
command=$I3BLOCKS_CONTRIB_REPO/mediaplayer/mediaplayer
instance=spotify
interval=5
signal=10

[battery]
label=BAT 
command=$I3BLOCKS_CONTRIB_REPO/battery/battery
interval=30

[free]
label=MEM 
command=$I3BLOCKS_CONTRIB_REPO/memory/memory
interval=1

[cpu]
label=CPU 
command=$I3BLOCKS_CONTRIB_REPO/cpu_usage/cpu_usage
interval=1

[wifi]
label=WIFI 
command=$I3BLOCKS_CONTRIB_REPO/wifi/wifi
interval=60

[interface]
label=NET 
command=$I3BLOCKS_CONTRIB_REPO/iface/iface
interval=5

[datetime]
command=date +%A\ %F\ %H:%M
interval=10
